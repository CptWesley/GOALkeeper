use robot as knowledge.

% The goTo action makes the agent move to a place (location) in the BW4T environment.
% As long as the agent has not arrived at the place it is going to, it will be in "traveling" mode.
define goTo(Location) with
	pre { not(at(Location)), not(state(traveling)) }
	post { true  }

%Exercise 2.3a: insert a specification for the goToBlock action.
define goToBlock(Block) with 
	pre { block(Block,_,Room), at(Room), getting(Block2), block(Block, Color,_), not(block(Block2, Color,_)) }
	post { true }

% Exercise 2.3b: insert a specification for the pickUp action.
define pickUp(Block) with 
	pre { atBlock(Block), not(holding(Block)), getting(Block2), block(Block, Color,_), not(block(Block2, Color,_)) }
	post { true }

% Exercise 2.3c: insert a specification for the putDown action.
define putDown with 
	pre { holding(Block), at(Room), room(Room)}
	post{ true }
